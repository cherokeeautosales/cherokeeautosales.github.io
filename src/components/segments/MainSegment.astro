            linear-gradient(rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.35)),
            url("/images/happyguy.jpg") no-repeat 50% 55% / cover;

        div {
            color: white;
            font-weight: bold;
            font-size: 5rem;
            text-align: center;
        }
