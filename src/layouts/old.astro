---
interface Props {
	title: string;
}

const { title } = Astro.props;

import "bootstrap/dist/css/bootstrap.min.css";
import "../styles/style.scss";
import { Container, Nav } from "react-bootstrap";

import NavBar from "../components/layout/NavBar/NavBar";

import {
	FaMapMarkerAlt,
	FaPhoneAlt,
	FaFacebookF,
	FaDollarSign,
} from "react-icons/fa";
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />

	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="icon" type="image/x-icon" href="/images/favicon.png" />

	<meta property="og:url" content="https://cherokeeautosalestn.com/" />
	<meta property="og:type" content="website" />

	<meta name="generator" content={Astro.generator} />

	<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "AutoDealer",
			"name": "Cherokee Auto Sales TN",
			"image": "https://scontent-ord5-1.xx.fbcdn.net/v/t39.30808-6/305309310_496322739171460_1001956815122140136_n.png?_nc_cat=108&ccb=1-7&_nc_sid=5f2048&_nc_ohc=Me7Ki46-erYQ7kNvgFuKcMQ&_nc_ht=scontent-ord5-1.xx&oh=00_AYBWEMg65sC0-5qJEMmxbRtVl_XUBCS_R1mKWk8GpXNvyA&oe=6646FAB3",
			"@id": "",
			"url": "https://cherokeeautosalestn.com",
			"telephone": "8656877100",
			"priceRange": "$500-$7000",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "3423 North Broadway St",
				"addressLocality": "Knoxville",
				"addressRegion": "TN",
				"postalCode": "37917",
				"addressCountry": "US"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": 36.0032478,
				"longitude": -83.9269679
			},
			"openingHoursSpecification": {
				"@type": "OpeningHoursSpecification",
				"dayOfWeek": [
					"Monday",
					"Tuesday",
					"Wednesday",
					"Thursday",
					"Friday",
					"Saturday"
				],
				"opens": "09:00",
				"closes": "18:00"
			},
			"sameAs": [
				"https://www.facebook.com/cherokeeautosales/",
				"https://www.youtube.com/@cherokeeautosales5096",
				"https://www.instagram.com/cherokeeautosales/?hl=af"
			]
		}
	</script>

	<style lang="scss" is:global>
		:root {
			--max-width: 1320px;
			--red: #eb0b2d;

			--light-blue: #0056b3;
			--blue: #0b1eeb;
			--dark-blue: #022759;
		}

		body {
			position: relative;
			margin: 0;
			padding: 0;
			min-height: 100vh;
		}
	</style>

	<style lang="scss" is:global>
		.navbar {
			position: sticky;
			top: 0;
			z-index: 1000;
		}

		.nav-link {
			color: white;

			&:after {
				content: "";
				display: block;
				width: 0;
				height: 2px;
				background: white;
				transition: width 0.3s;
				margin-top: 2px;
			}

			&:hover {
				&:after {
					width: 100%;
				}
			}
		}

		.info-bar {
			background-color: var(--dark-blue);
			/* border-bottom: 1px solid #e9ecef; */
			white-space: nowrap;
			color: white;

			width: 100%;
			max-width: 100%;

			display: flex;
			/* center the content */
			justify-content: center;
			align-items: center;

			> * {
				display: flex;
				justify-content: space-between;
				align-items: center;

				width: 100%;
				max-width: var(--max-width);
				> * {
					padding: 0.5rem;
				}
			}

			svg {
				margin-top: -3px;
				font-size: 20px;
			}

			&.long {
				@media screen and (max-width: 1200px) {
					display: none;
				}
			}

			&.short {
				@media screen and (min-width: 1200px) {
					display: none;
				}
			}
		}

		.icon-group {
			display: flex;
			justify-content: space-between;
			flex-direction: row;
			/* center the content */
			align-items: center;

			padding: 0;
			margin: 0;
			width: 150px;

			> * {
				background-color: var(--light-blue);
				border-radius: 50%;
				width: 35px;
				height: 35px;
				line-height: 20px;
				padding-left: 7px;

				&::after {
					display: none;
				}

				&:hover {
					background-color: var(--blue);
				}
			}
		}

		.info-nav {
			float: right;
		}

		.main-bar {
			background-color: #eb0b2d;
			border-bottom: 1px solid #e9ecef;

			> * > * {
				color: white;
			}
		}
	</style>
	<title>{title}</title>
</head>
<body>
	<Container className="info-bar long">
		<Nav>
			<Nav.Link
				className="wrap-hide"
				href="https://www.google.com/maps/?q=3423%20North%20Broadway,Knoxville,TN,37917"
				target="_blank"
			>
				<FaMapMarkerAlt /> 3423 North Broadway Knoxville, TN 37917
			</Nav.Link>

			<Nav.Link className="wrap-hide" href="tel:8656877100">
				<FaPhoneAlt /> (865) 687 - 7100
			</Nav.Link>

			<Nav.Link
				className="wrap-hide"
				href="https://www.facebook.com/cherokeeautosales"
				target="_blank"
			>
				<FaFacebookF /> Facebook
			</Nav.Link>

			<div class="wrap-hide">¡Nosotros Hablamos Español!</div>

			<Nav.Link
				className="info-nav"
				href="https://www.facebook.com/cherokeeautosales"
				target="_blank"
			>
				<FaDollarSign /> Payment
			</Nav.Link>

			<div id="google_translate_element">Select Language</div>
		</Nav>
	</Container>

	<Container className="info-bar short">
		<Nav>
			<div class="icon-group">
				<Nav.Link
					href="https://www.google.com/maps/?q=3423%20North%20Broadway,Knoxville,TN,37917"
					target="_blank"
				>
					<FaMapMarkerAlt />
				</Nav.Link>

				<Nav.Link href="tel:8656877100">
					<FaPhoneAlt />
				</Nav.Link>

				<Nav.Link
					href="https://www.facebook.com/cherokeeautosales"
					target="_blank"
				>
					<FaFacebookF />
				</Nav.Link>
			</div>

			<Nav.Link
				className="info-nav"
				href="https://www.facebook.com/cherokeeautosales"
				target="_blank"
			>
				<FaDollarSign /> Payment
			</Nav.Link>

			<div id="google_translate_element">Select Language</div>
		</Nav>
	</Container>

	<NavBar client:load/>

	<slot />

	<footer
		style={{
			backgroundColor: "var(--dark-blue)",
		}}
	>
		<Container
			style={{
				display: "grid",
				gridTemplateColumns: "1fr 1fr 1fr",
			}}
		>
			<div>
				<h3>Cherokee Auto Sales</h3>
				<p>3423 North Broadway St</p>
				<p>Knoxville, TN 37917</p>
				<p>(865) 687 - 7100</p>
			</div>
			<div>
				Contact Us
			</div>
			<div>
				<h3>Hours</h3>
				<p>Monday - Friday: 9:00 AM - 6:00 PM</p>
				<p>Saturday: 9:00 AM - 5:00 PM</p>
				<p>Sunday: Closed</p>
			</div>
		</Container>
	</footer>
</body>
</html>
